{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:migrate"],
      "outputs": [".next/**", "!.next/cache/**"],
      "passThroughEnv": [
        "DATABASE_URL",
        "UPLOADTHING_SECRET",
        "UPLOADTHING_APP_ID",
        "UNKEY_ROOT_KEY",
        "UNKEY_NAMESPACE",
        "AUTH_SECRET",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET"
      ]
    },
    "test:e2e": {
      "passThroughEnv": [
        "DATABASE_URL",
        "UPLOADTHING_SECRET",
        "UPLOADTHING_APP_ID",
        "UNKEY_ROOT_KEY",
        "UNKEY_NAMESPACE",
        "AUTH_SECRET",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET"
      ]
    }
  }
}
