{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "db:migrate": {
      "cache": false,
      "dependsOn": ["db:generate"],
      "inputs": ["drizzle/**"],
      "passThroughEnv": ["DATABASE_URL"],
      "interactive": true
    },
    "db:generate": {
      "cache": false,
      "outputs": ["drizzle/**"],
      "inputs": ["$TURBO_DEFAULT$", "!CHANGELOG.md", "!eslint.config.js"],
      "passThroughEnv": ["DATABASE_URL"],
      "interactive": true
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "db:check": { "cache": false },
    "db:migrate:drop": { "cache": false, "interactive": true },
    "db:pull": { "cache": false },
    "db:push": { "cache": false, "interactive": true },
    "db:up": { "cache": false }
  }
}
