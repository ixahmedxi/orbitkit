{
  "name": "@orbitkit/utils",
  "version": "0.2.1",
  "private": true,
  "description": "Common utilities for OrbitKit",
  "license": "MIT",
  "author": "OrbitKit",
  "sideEffects": false,
  "type": "module",
  "exports": {
