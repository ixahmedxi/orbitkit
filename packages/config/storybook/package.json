{
  "name": "@orbitkit/storybook",
  "version": "0.4.0",
  "private": true,
  "description": "A package to share Storybook configuration preset for the workspace",
  "license": "MIT",
  "author": "OrbitKit",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./configs/react-vite": {
      "types": "./dist/configs/react-vite.d.ts",
      "default": "./dist/configs/react-vite.js"
    },
    "./manager": {
      "types": "./dist/manager.d.ts",
      "default": "./dist/manager.js"
    },
    "./theme": {
      "types": "./dist/theme.d.ts",
      "default": "./dist/theme.js"
    },
    "./preview": {
      "types": "./dist/preview.d.ts",
      "default": "./dist/preview.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "bun run rm -rf dist *.tsbuildinfo",
    "dev": "tsc -w -p tsconfig.build.json",
    "lint": "eslint .  --max-warnings 0",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@orbitkit/assets": "workspace:^",
    "@orbitkit/utils": "workspace:^",
    "@radix-ui/colors": "^3.0.0",
    "@storybook/addon-a11y": "^8.1.10",
    "@storybook/addon-essentials": "^8.1.10",
    "@storybook/addon-interactions": "^8.1.10",
    "@storybook/addon-links": "^8.1.10",
    "@storybook/addon-onboarding": "^8.1.10",
    "@storybook/addon-themes": "^8.1.10",
    "@storybook/addon-viewport": "^8.1.10",
    "@storybook/manager-api": "^8.1.10",
    "@storybook/react": "^8.1.10",
    "@storybook/react-vite": "^8.1.10",
    "@storybook/theming": "^8.1.10",
    "@storybook/types": "^8.1.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^8.1.10"
  },
  "devDependencies": {
    "@orbitkit/eslint": "workspace:^",
    "@orbitkit/tsconfig": "workspace:^",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0"
  }
}
