{
  "extends": ["@orbitkit/tsconfig/react.json"],
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".storybook/**/*", "**/*.cjs", "**/*.js"],
  "exclude": ["dist", "node_modules", "storybook-static"]
}
