{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!CHANGELOG.md",
        "!eslint.config.js",
        "!tsconfig.build.json"
      ]
    }
  }
}
